# Environment configuration template
# Copy this file to .env and update with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8081
API_LOG_LEVEL=INFO

# Application Configuration
APP_ENV=development
DEBUG=False

# Data Sources Configuration
MFTOOL_CACHE_DIR=./cache
MSTARPY_TIMEOUT=30
JUGAAD_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Database (if needed in future)
DATABASE_URL=sqlite:///./mf_etl.db

# API Keys (if needed)
# MSTARPY_API_KEY=
# EXTERNAL_API_KEY=

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Validation Configuration
MIN_NAV_VALUE=0.01
MAX_NAV_VALUE=100000
MAX_NAV_AGE_DAYS=7
MIN_SECTORS=3
SECTOR_TOLERANCE=1.0
MIN_HOLDINGS=10

# Timeout Configuration
ENRICHMENT_TIMEOUT_SECONDS=120
FETCHER_TIMEOUT_SECONDS=60
